@page
@model BarberBookingWeb.Pages.Programari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Programari</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Locatia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Barber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programare[0].Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Programare) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locatia)
            </td>
            <td>
                    @item.Barber.Nume @item.Barber.Prenume
            </td>
            <td>
                    @item.Client.Nume @item.Client.Prenume
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
